{
  "so-gap": {
    "type": "object",
    "title": "间隔区",
    "properties": {
      "backgroundColor": {
        "title": "间隔区背景色",
        "description": "试试修改间隔区背景色",
        "type": "string",
        "default": "#FFFF00",
        "format": "color"
      },
      "textColor": {
        "title": "间隔区文本颜色",
        "type": "string",
        "default": "#000000",
        "format": "color"
      },
      "text": {
        "title": "间隔区文本",
        "type": "string",
        "default": "╮(＾ᴗ＾)╭"
      },
      "height": {
        "title": "间隔区高度",
        "description": "试试修改间隔区高度",
        "type": "number",
        "default": 40
      }
    },
    "additionalProperties": false
  },
  "so-header": {
    "title": "头部区",
    "type": "object",
    "properties": {
      "title": {
        "title": "头部标题",
        "type": "string",
        "default": "头部标题"
      },
      "src": {
        "title": "头部图片",
        "description": "试试输入新的图片URL: https://vuejs.org/images/logo.png",
        "type": "string",
        "default": "头部图片"
      },
      "link": {
        "title": "头部图片点击跳转",
        "type": "string",
        "format": "url",
        "default": "头部图片点击跳转"
      }
    },
    "additionalProperties": false
  },
  "so-info": {
    "type": "object",
    "title": "信息区",
    "properties": {
      "title": {
        "title": "信息标题",
        "type": "string",
        "default": "信息标题"
      },
      "infoList": {
        "title": "信息列表",
        "description": "试试删除或上下移动信息项",
        "type": "array",
        "items": {
          "type": "object",
          "title": "信息",
          "properties": {
            "info": {
              "title": "信息文本",
              "type": "string",
              "default": "信息文本"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
